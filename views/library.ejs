<%- include("partials/header") %> <%- include("partials/nav") %>

<!-- 2nd class -->
<div
  class="libpage mt-3 bg-dark"
        
>
  <div class="container rounded p-4 ">
    <a href="/create-book" class="btn btn-primary mb-4 mt-3">Create New Book</a>
    <h1 class="mb-4 fs-1 fw-bolder text-white">Registered Books</h1>
    <div class="card me-3 mb-5" style="width: 18rem">
      <img
        class="card-img-top"
        src="https://images.unsplash.com/photo-1568822617270-2c1579f8dfe2?q=80&w=1780&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title fw-bolder">Book Name</h5>
        <h6 class="card-title">Author Name</h6>
        <p class="card-text mt-3">
          Some quick example text to build on the card title and make up the
          bulk of the card's content.
        </p>
        <a href="/details" class="btn btn-primary">Explore Book</a>
      </div>
    </div>
  </div>


  <div class="booklist d-flex justify-content-around">
    <% books.forEach((book)=>{ %>
    <div class="card mt-5 d-flex" style="width: 18rem">
      <img
        class="card-img-top"
        style="height: 20rem"
        src="<%= book.Image %>"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title fw-bolder fs-3"><%= book.BookName%></h5>
        <p class="card-text mt-4 p-1"><%= book.Description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item fw-bolder">Author: <%= book.Author %></li>
        <li class="list-group-item">Language: <%= book.Language %></li>
        <li class="list-group-item fw-bolder">Price: <%= book.Price %></li>
        <li class="list-group-item">Rating: <%= book.Rating %></li>
      </ul>
      <div class="card-body">
        <a
          href="<%= book.Book_link %>"
          class="card-link text-decoration-none fs-5 fw-bolder"
          >Book Link</a
        >
        <a
          href="<%= book.Buy_now %>"
          class="card-link text-decoration-none fs-5 fw-bolder"
          >Buy Now</a
        >
      </div>
      <button class="bttn fs-5 rounded bg-warning text-white border-warning">
        Add to cart
      </button>
    </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
